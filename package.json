{
  "name": "genesis",
  "version": "2.0.0-alpha",
  "description": "A Warframe bot for your Discord server or clan :star:",
  "main": "main.js",
  "scripts": {
    "lint": "eslint main.js src/",
    "lint:fix": "eslint main.js src/ --fix",
    "test": "npm run lint",
    "setup": "npm i",
    "build": "docker build . -t genesis",
    "restart": "pm2 delete genesis && npm start && npm run logs",
    "start": "pm2 start genesis.json --only genesis",
    "start:logs": "npm start && npm run logs",
    "start:worker": "pm2 start worker.json",
    "start:logs:worker": "npm run start:worker && npm run logs:worker",
    "stop": "pm2 delete genesis",
    "uninstall": "pm2 kill && rm -rf node_modules/ && npm uninstall -g pm2",
    "logs": "pm2 logs genesis",
    "logs:worker": "pm2 logs /worker.*/",
    "update:genesis": "pm2 delete genesis && git checkout -- . && git pull && npm i && npm restart || npm start"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wfcd/genesis.git"
  },
  "bugs": {
    "url": "https://github.com/wfcd/genesis/issues"
  },
  "homepage": "https://genesis.warframestat.us",
  "keywords": [
    "warframe",
    "genesis",
    "discord"
  ],
  "author": "wfcd",
  "contributors": [
    "tobitenno <tobiah@warframe.gg> (https://github.com/tobitenno)",
    "nspacestd (https://github.com/nspacestd)"
  ],
  "dependencies": {
    "@discordjs/rest": "^0.1.0-canary.0",
    "@sentry/node": "^6.13.3",
    "@spectacles/rest": "^0.8.3",
    "bluebird": "^3.7.2",
    "bufferutil": "^4.0.3",
    "colors": "^1.4.0",
    "cron": "^1.8.2",
    "decache": "^4.6.0",
    "discord-api-types": "^0.22.0",
    "discord-giveaways": "^3.2.3",
    "discord.js": "^13.2.0",
    "flat-cache": "^3.0.4",
    "json-query": "^2.2.2",
    "moment": "^2.29.1",
    "ms": "^2.1.3",
    "mysql2": "^2.2.5",
    "node-fetch": "^2.6.1",
    "node-wikia": "0.0.3",
    "numeral": "^2.0.6",
    "parse-duration": "^0.4.4",
    "ping": "^0.4.1",
    "rss-feed-emitter": "^3.2.2",
    "sql-template-strings": "^2.2.2",
    "topgg-autoposter": "^1.1.10",
    "url-exists": "^1.0.3",
    "utf-8-validate": "^5.0.5",
    "warframe-name-generator": "^1.0.2"
  },
  "optionalDependencies": {
    "erlpack": "github:discord/erlpack",
    "zlib-sync": "^0.1.7"
  },
  "devDependencies": {
    "@babel/core": "^7.12.13",
    "@babel/eslint-parser": "^7.12.13",
    "@babel/plugin-proposal-class-properties": "^7.12.13",
    "@babel/plugin-proposal-private-methods": "^7.12.13",
    "@babel/preset-env": "^7.12.13",
    "@types/flat-cache": "^2.0.0",
    "eslint": "^7.19.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.0"
  },
  "license": "Apache-2.0",
  "engines": {
    "node": ">=16.6.2"
  },
  "eslintIgnore": [
    "commands.json",
    "src/resources/*.json"
  ],
  "eslintConfig": {
    "extends": "airbnb-base",
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "sourceType": "script",
      "babelOptions": {
        "plugins": [
          "@babel/plugin-proposal-class-properties",
          "@babel/plugin-proposal-private-methods"
        ]
      }
    },
    "rules": {
      "valid-jsdoc": [
        "error",
        {
          "requireReturn": false,
          "requireReturnDescription": false,
          "preferType": {
            "String": "string",
            "Number": "number",
            "Boolean": "boolean",
            "Function": "function",
            "object": "Object",
            "date": "Date",
            "error": "Error"
          },
          "prefer": {
            "return": "returns"
          }
        }
      ],
      "strict": [
        "error",
        "safe"
      ],
      "linebreak-style": "off",
      "no-restricted-syntax": [
        "off"
      ],
      "no-await-in-loop": "off",
      "import/no-unresolved": 0,
      "no-useless-escape": 0,
      "func-names": 0,
      "arrow-parens": [
        2,
        "as-needed",
        {
          "requireForBlockBody": true
        }
      ],
      "global-require": 0,
      "no-param-reassign": "off",
      "no-continue": "off",
      "lines-between-class-members": "off",
      "no-fallthrough": "off",
      "no-case-declarations": "off",
      "default-case": "off",
      "max-classes-per-file": "off",
      "consistent-return": "off",
      "class-methods-use-this": "off"
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-private-methods"
    ]
  }
}
